<div id="notice"><%= notice %></div>

<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
  <li id="post_<%= post.id %>">
    <%= link_to '# ' + post.id.to_s, edit_post_path(post) %>
    <%= post.title %>
    <%= link_to 'Finished', post, :confirm => 'Sure?', :method => :delete, :remote => true %>
  </li>
  <% end %>
</ul>

<%= link_to 'New', new_post_path %>

<script>
  $(function() {
  setTimeout(function(){
  $('#notice').fadeOut("slow");
  }, 800);
  });

  $(document).on('ajax:success', 'a[data-method="delete"]', function(e, data, status, xhr){
  $('#post_' + data.post.id).fadeOut("slow");
  });

</script>
